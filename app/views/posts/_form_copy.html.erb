<%= form_for(@post, :url => { :action => "create_copy" }) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.hidden_field :name, :value => @post[:name] %>
    <%= f.hidden_field :content, :value => @post[:content] %>
    <%= f.hidden_field :id, :value => @post[:id] %>
    <%= f.submit "Ulozit jako kopii" %>

    <h2><%= f.label 'Komentáře' %></h2>
    <% @post.comments.each do |comment| %>
        <p>
          <%= check_box_tag "comment_id[]", comment.id %>
          <%= comment.body %>
        </p>
    <% end %>

<% end %>